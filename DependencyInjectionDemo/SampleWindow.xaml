<Window x:Class="DependencyInjectionDemo.SampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DependencyInjectionDemo"
        mc:Ignorable="d"
        Title="SampleWindow" Height="250" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="CounterTextBlock" Text="Counter: 0" Margin="10" />
        <Button Content="Increment" Click="IncrementCounter_Click" Margin="10" />
        <Button Content="Save" Click="SaveCounter_Click" Margin="10" />
    </StackPanel>
</Window>
